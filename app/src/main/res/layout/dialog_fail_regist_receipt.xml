<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <kr.hs.emirim.uuuuri.haegbook.Layout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_line_background"
        app:scale_base_height="340"
        app:scale_base_width="512">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:scale_left="60"
            app:scale_textsize="23"
            app:scale_top="50"
            android:text="사용하신 금액이 예정했던 금액을 초과하여 영수증을 등록할 수 없습니다."
            app:scale_width="400"
            app:scale_height="67"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:scale_left="120"
            app:scale_textsize="23"
            app:scale_top="120"
            android:text="예정 금액을 늘려주세요."
            app:scale_width="274"
            app:scale_height="67"
            android:gravity="center"/>


        <Button
            android:id="@+id/dialog_button_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            app:scale_width="123"
            app:scale_height="61"
            app:scale_top="220"
            app:scale_left="195"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="16dp"
            app:scale_textsize="25"
            android:text="확인 >"/>


    </kr.hs.emirim.uuuuri.haegbook.Layout.ScalableLayout>
</LinearLayout>