<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="50dp"
        app:cardUseCompatPadding="false">

        <kr.hs.emirim.uuuuri.haegbook.Layout.ScalableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:scale_base_height="332"
            app:scale_base_width="720"
            android:background="@drawable/receipt">

            <ImageView
                android:id="@+id/type_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:scale_left="8"
                app:scale_height="268"
                app:scale_top="33"
                app:scale_width="35"/>

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                app:scale_height="60"
                app:scale_left="65"
                app:scale_textsize="40"
                app:scale_top="33"
                app:scale_width="290" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_x_btn"
                app:scale_height="23"
                app:scale_left="663"
                app:scale_textsize="33"
                app:scale_top="30"
                app:scale_width="23" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="금액 :"
                app:scale_height="50"
                app:scale_left="65"
                app:scale_textsize="33"
                app:scale_top="110"
                app:scale_width="100" />

            <TextView
                android:id="@+id/amount_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:scale_height="50"
                app:scale_left="165"
                app:scale_textsize="33"
                app:scale_top="110"
                app:scale_width="200" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="분야 :"
                app:scale_height="50"
                app:scale_left="65"
                app:scale_textsize="33"
                app:scale_top="160"
                app:scale_width="100" />


            <TextView
                android:id="@+id/type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:scale_height="50"
                app:scale_left="165"
                app:scale_textsize="33"
                app:scale_top="160"
                app:scale_width="470" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Memo :"
                app:scale_height="50"
                app:scale_left="65"
                app:scale_textsize="33"
                app:scale_top="210"
                app:scale_width="120" />

            <TextView
                android:id="@+id/memo_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:scale_height="50"
                app:scale_left="185"
                app:scale_textsize="33"
                app:scale_top="210"
                app:scale_width="470" />

            <TextView
                android:id="@+id/date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="2017.09.09"
                app:scale_height="50"
                app:scale_left="150"
                app:scale_textsize="33"
                app:scale_top="260"
                app:scale_width="470" />

        </kr.hs.emirim.uuuuri.haegbook.Layout.ScalableLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>